{
  "name": "lilo-e2e-runner",
  "version": "0.1.0",
  "description": "Playwright test automation runner - CLI and Library",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "lilo": "bin/lilo"
  },
  "files": ["dist/", "bin/", "README.md"],
  "scripts": {
    "setup": "node scripts/setup.js",
    "setup:full": "npm run setup && npm run install:browsers && npm run build",
    "install:browsers": "npx playwright install --with-deps",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "npm run setup:check && ts-node-esm src/cli.ts",
    "test": "npm run setup:check && node dist/cli.js",
    "test:headless": "HEADLESS=true npm run test",
    "test:headed": "HEADLESS=false npm run test",
    "test:debug": "DEBUG=true HEADLESS=false npm run test",
    "test:simple": "npm run test ./workflows/simple-example.json",
    "test:comprehensive": "npm run test ./workflows/comprehensive-example.json",
    "test:chaining": "npm run test ./workflows/example-with-chaining.json",
    "test:all": "npm run test:simple && npm run test:chaining && npm run test:comprehensive",
    "test:examples": "node scripts/run-examples.js",
    "run": "node dist/cli.js",
    "run:headless": "HEADLESS=true npm run run",
    "run:headed": "HEADLESS=false npm run run",
    "run:debug": "DEBUG=true HEADLESS=false npm run run",
    "clean": "node scripts/clean.js",
    "clean:screenshots": "rimraf screenshots/*",
    "clean:build": "rimraf dist/*",
    "clean:all": "npm run clean:screenshots && npm run clean:build && rimraf node_modules",
    "setup:check": "node scripts/check-setup.js",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint",
    "start": "npm run setup:check && npm run test:simple",
    "demo": "npm run setup:check && HEADLESS=false npm run test:simple",
    "health-check": "node scripts/health-check.js",
    "list-blocks": "node scripts/list-blocks.js",
    "docs": "node scripts/generate-docs.js",
    "version": "node scripts/version.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["playwright", "testing", "automation", "typescript", "runner", "library", "cli"],
  "author": "lptrk",
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "chalk": "^5.3.0",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
