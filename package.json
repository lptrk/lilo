{
  "name": "lilo-e2e-runner",
  "version": "0.1.4",
  "description": "A flexible Playwright-based test runner for end-to-end testing with workflow support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./definitions": {
      "import": "./dist/blocks/definitions-only.js",
      "require": "./dist/blocks/definitions-only.js",
      "types": "./dist/blocks/definitions-only.d.ts"
    }
  },
  "bin": {
    "lilo": "./bin/lilo"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "postbuild": "chmod +x bin/lilo",
    "lilo": "./bin/lilo"
  },
  "keywords": ["playwright", "testing", "e2e", "automation", "workflow", "test-runner"],
  "author": "lptrk",
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "peerDependencies": {
    "playwright": "^1.40.0"
  },
  "files": ["dist", "bin", "README.md", "LICENSE"]
}
